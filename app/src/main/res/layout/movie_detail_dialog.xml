<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="820dp"
    android:layout_height="match_parent"
    android:padding="@dimen/pad_10dp"
    android:background="@color/listview_channel_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="@dimen/pad_20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ID_TEXT_NAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thor:Ragnarok"
                    android:maxLines="1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_40sp"/>

                <TextView
                    android:id="@+id/ID_TEXT_YEAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:maxLines="1"
                    android:text="(2017)"
                    android:textSize="@dimen/font_10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ID_TEXT_NUMBER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:text="12"
                    android:background="@drawable/rounded_corner"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_15sp"/>

                <TextView
                    android:id="@+id/ID_TEXT_GENRE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:maxLines="1"
                    android:text="2h 10m | Alexandre Actor"
                    android:textSize="@dimen/font_10sp"/>

                <ImageView
                    android:layout_width="@dimen/img_size_20dp"
                    android:layout_height="@dimen/img_size_20dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/yellow_star"/>

                <TextView
                    android:id="@+id/ID_TEXT_MARK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:text="7.9"
                    android:textSize="@dimen/font_15sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/ID_TEXT_DESCRIPTION"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_10dp"
                android:maxLines="4"
                android:textColor="@android:color/white"
                android:text="This is a test description."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ID_TEXT_DIRECTOR"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:maxLines="4"
                        android:textColor="@android:color/white"
                        android:text="Director:Tracker witter"
                        android:textSize="@dimen/font_10sp"/>
    
                    <TextView
                        android:id="@+id/ID_TEXT_STARS"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:maxLines="4"
                        android:textColor="@android:color/white"
                        android:text="stars: chris martin, chals hammer"
                        android:textSize="@dimen/font_10sp"/>
    
                    <TextView
                        android:id="@+id/ID_TEXT_IDIOMS"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:maxLines="4"
                        android:textColor="@android:color/white"
                        android:text="idima:netherlands"
                        android:textSize="@dimen/font_10sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ID_RL"
            android:layout_width="@dimen/dialog_video_width"
            android:padding="@dimen/pad_2dp"
            android:focusable="true"
            android:layout_height="@dimen/dialog_video_height">
            <ImageView
                android:id="@+id/ID_VIDEO_IMAGE"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/ID_VIDEO_PLAY_IMAGE"
                android:layout_width="@dimen/img_size_44dp"
                android:layout_height="@dimen/img_size_44dp"
                android:layout_centerInParent="true"
                android:src="@drawable/video_play"/>
        </RelativeLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ID_SCREEN_SHOTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:padding="@dimen/pad_5dp"
        android:background="@color/listview_channel_focus_color"
        android:clipChildren="false"
        android:clipToPadding="false"/>

</LinearLayout>